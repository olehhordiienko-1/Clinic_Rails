<h1>Patient Cards</h1>

<table class="table">
  <thead>
  <tr>
    <th>Patient</th>
    <th>Department</th>
    <th>Doctor</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @patient_cards.each do |card| %>
    <tr>
      <td><%= Patient.find_by(id:card.patient_id).last_name %></td>
      <td><%= card.department.name %></td>
      <td><%= card.doctor.name %></td>
      <td><%= link_to 'Show', card %></td>
      <td><%= link_to 'Edit', edit_patient_card_path(card) %></td>
      <td>
        <%= form_with(model: card, url: patient_card_path(card), method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
          <%= form.submit 'Destroy' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient Card', new_patient_card_path %>
