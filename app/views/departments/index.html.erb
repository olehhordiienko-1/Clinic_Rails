
<h1>Departments</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @departments.each do |department| %>
    <tr>
      <td><%= department.name %></td>
      <td><%= department.address %></td>
      <td><%= link_to 'Show', department %></td>
      <td><%= link_to 'Edit', edit_department_path(department) %></td>
      <td>
        <%= form_with(model: department, url: department_path(department), method: :delete, data: { confirm: 'Are you sure?' }) do |form| %>
          <%= form.submit 'Destroy' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path %>
